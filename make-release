#! /bin/sh 

release=5.20.00

echo "This is the release $release of the Open Source IRSTLM Toolkit." > release.txt

cd ..
tar  -czf irstlm-$release.tgz --exclude '.*' --exclude '*.o' \
irstlm/src \
irstlm/scripts \
irstlm/doc \
irstlm/example/train.gz irstlm/example/test \
irstlm/readme irstlm/install \
irstlm/release.txt

cat << EOF
Add release to sourceforge server as follows:
1. log in sourceforge.net, project IRSTLM
2. select Administration -> File Releases
3. Add Release to irstlm
4. New release name: irstlm-$release
5. Upload release file from local disk
EOF
